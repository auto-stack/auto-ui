// Simple Counter Widget

// Counter widget
type Counter {
    count int = 0

    fn view() {
        col {
            button "+" {
                onclick: 1
            }
            text(self.count)
            button "-" {
                onclick: 2
            }
        }
    }

    fn on(ev int) {
        is ev {
            1 => {
                self.count += 1
            }
            2 => {
                self.count -= 1
            }
        }
    }
}
