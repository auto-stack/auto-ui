type Counter is Widget {
    count int = 0

    fn view() {
        col {
            button "+" {
                onclick: Msg.Inc
            }
            text(count)
            button "-" {
                onclick: Msg.Dec
            }
        }
    }

    fn on(ev Msg) {
        is ev {
            Msg.Inc => count += 1
            Msg.Dec => count -= 1
        }
    }
}
