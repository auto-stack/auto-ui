// Working Counter Widget
// This demonstrates a basic counter with increment/decrement buttons

type Counter {
    count int = 0

    fn view() {
        col {
            button("+", onclick: 1)
            text(count)
            button("-", onclick: 2)
        }
    }

    fn on(ev int) {
        is ev {
            1 => {
                count += 1
            }
            2 => {
                count -= 1
            }
        }
    }
}
