use ui:*

enum Event {
    Shine
}

type Hello {
    var msg str = "Hello World!"

    fn view() {
        center {
            label(self.msg) {}
            button("Click me!") {
                onclick: Event.Shine
            }
        }
    }

    fn on(event: Event) {
        self.msg = "Hello Sunshine!"
    }
}

fn main() {
    app("Hello Example") {
        hello() {}
    }
}
